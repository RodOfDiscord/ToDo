@{
    ViewData["Title"] = "Home Page";
    
}
@model IEnumerable<To_Do.Models.Task>

<div class="text-center">
    <form asp-controller="Home" asp-action="Add" method="post">
        <input type="text" id="name" name="name" required/>
        <input type="submit" value="Add" class="btn btn-success" />
      
    </form>
    <table class="table table-bordered">
        <tr>
            <td>Tasks</td>
            <td>Date</td>
            <td>Done</td>
            <td></td>
        </tr>
        @foreach(var a in Model)
            {
            <tr>
                <td class="align-middle">@a.Content</td>
                <td class ="align-middle">@a.Created</td>
                <td class="align-middle"><input class="form-check-input" type="checkbox" checked = "@a.IsReady"/> </td>
                    <td>
                        <form>
                            <input type="submit" value="Delete" class="btn btn-warning" asp-action="DeleteTask" asp-route-id ="@a.Id" asp-controller="Home" />
                        </form>
                    
                        <br/><a href="#">Edit</a>
                    </td>
                </tr>
            }
        </table>
</div>
